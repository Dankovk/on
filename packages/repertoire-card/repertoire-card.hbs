<div {{{attr attributes}}}>
    <div class="ocl-card__header ocl-module-card__header ocl-repertoire-card__header">
        <div class="ocl-module-card__header-content ocl-repertoire-card__header-content">
            <a href="#" class="ocl-module-card__image">
                <img class="ocl-module-card__image-element" src="http://placehold.it/350x150" alt="">
                <i class="fa fa-play-circle"></i>
            </a>
        </div>
    </div>
    <div class="ocl-card__body ocl-module-card__body">
        <div class="ocl-card__body-content ocl-module-card__body-content">
            <a href="#" class="ocl-module-card__link">
                <h3 class="ocl-module-card__title">Title</h3>
            </a>
            <span class="ocl-module-card__detail">
                    <span class="ocl-module-card__detail-text">
                        (0:55)
                    </span>
                    <button class="ocl-module-card__addto">
                        <i class="fa fa-plus-square-o"></i>
                    </button>
                    <div class="ocl-popover ocl-popover--no-close">
                        <div class="ocl-popover__list">
                            <a class="ocl-popover__link" href="#">
                                Add to Assignment
                            </a>
                            <a class="ocl-popover__link" href="#">
                                Add to My List
                            </a>
                        </div>
                        <button class="ocl-popover__close">
                            <div class="ocl-popover__close-element"></div>
                        </button>
                        <div class="ocl-popover__arrow ocl-popover__arrow--bottom-right"></div>
                    </div>
                </span>
        </div>
    </div>
    <div class="ocl-card__footer ocl-repertoire-card__footer">
        <i class="fa fa-tags"></i>
        <span class="ocl-repertoire-card__tags">Anononmus, Modern, Andante Level 5</span>
    </div>
</div>
